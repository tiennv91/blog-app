<div class="row">
	<div class="new-post-panel">
    <h2>Sign up</h2>
    <%= simple_form_for resource, as: resource_name, url: registration_path(resource_name), wrapper: :vertical_form do |f| %>
      <div class="form-inputs">
        <%= f.input :email, wrapper: :vertical_form do %>
          <%= f.input_field :email, autofocus: true, required: true, class: "form-control" %>
        <% end %>
        <br>
        <%= f.input :password, wrapper: :vertical_form do %>
          <%= f.input_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), class: "form-control" %>
        <% end %>
        <br>
        <%= f.input :password_confirmation, wrapper: :vertical_form do %>
        	<%= f.input_field :password_confirmation, required: true, class: "form-control" %>
        <% end %>	
      </div>
			<br>
      <div class="form-actions">
        <%= f.button :submit, "Sign up", :class => "btn btn-success btn-circle text-uppercase" %>
      </div>
    <% end %>
		<br>
    <%= render "devise/shared/links" %>
  </div>
</div>