<div class="row">
	<div class="new-post-panel">
    <h2>Log in</h2>
    <%= simple_form_for resource, as: resource_name, url: session_path(resource_name), wrapper: :vertical_form do |f| %>
      <div class="form-inputs">
        <%= f.input :email, wrapper: :vertical_form do %>
          <%= f.input_field :email, autofocus: true, required: false, class: "form-control" %>
        <% end %>
        <br>
        <%= f.input :password, wrapper: :vertical_form do %>
          <%= f.input_field :password, required: false, class: "form-control" %>
        <% end %>
        <br>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Log in", :class => "btn btn-success btn-circle text-uppercase" %>
      </div>
    <% end %>
    <br>

    <%= render "devise/shared/links" %>
  </div>
</div>