<div class="search-box">
  <div class="post-item">
    <div class="post-header clearfix">
      <div class="form-group" style="margin:0px !important;">
        <%= form_tag posts_path, :method => :get do %>
          <%= text_field_tag :search, params[:search], :placeholder => "Search ...", class: "form-control" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% if @posts.count == 0 %>
  <div class="post-item">
    <div class="post-header clearfix">

      <div class="post-nothing">
        <% if params[:search].present? %>
          <%= "No post with key: \"#{params[:search]}\"" %>
        <% else %>
          Stuff, I am working hard for this blog.
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<% @posts.each do |post| %>
  <div class="post-item">
    
    <div class="post-header clearfix">
      <div class="post-format-icon">
        <i class="fa fa-pencil" aria-hidden="true"></i>
      </div>
      <div class="post-info-wrap">
        <h2 class="post-title">
          <%= link_to post.title, post_path(:id => post.slug), {class: ''} %>
        </h2>
        
        <div class="post-meta clearfix">
          <%= post.created_at.strftime('%Y-%m-%d') %>
          <% if post.tags.count > 0 %>
          <div class="hidden-xs">
            <hr style="margin: 10px 0 10px 0;">
            <div>Tags: </div>
            <% post.tags.each do |tag| %>
              <a href="/posts/tags?tag=<%= tag.name %>" class="tag-content">
                <span class="tag-text"><%= tag.name %></span>
                <span class="tag-num"><%= tag.taggings_count %></span>
              </a>
            <% end %>     
          </div>  
          <% end %>     
        </div>
      </div>
    </div>
    
    <div class="image-item">
      <%= image_tag post.cover_image, class: "img img-responsive" %>
    </div>
    <div class="post-content">
      <%= markdown post.description %>
    </div>
    <div class="post-action">
      <%= link_to 'Read more',  post_path(:id => post.slug), class: 'btn btn-sm btn-success btn-circle' %>
      <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-sm btn-warning btn-circle' %>
      <%= link_to 'Destroy', post, method: :delete,  data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger btn-circle' %>
    </div>
  </div>
<% end %>